<% title t('user_sessions.titles.new') %>

<fieldset>
  <legend><%= t('user_sessions.login_toggle', :token => login_toggle) %></legend>

<%= error_messages_for :user_session, :object_name => UserSession.human_name %>

<% form_for @user_session, :url => user_session_path do |f| %>
<div id="password_box"<% unless @user_session.openid_identifier.blank? %> style="display: none;"<% end %>>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </p>
  <p>
    <%= f.submit t('user_sessions.actions.login') %> | 
    <%= link_to t('user_sessions.forget_password'), new_password_reset_path %>
  </p>
</div>
<% end %>

<% form_for @user_session, :url => user_session_path do |f| %>
<div id="openid_box"<% if @user_session.openid_identifier.blank? %> style="display: none;"<% end %>>
  <p>
    <%= f.label :openid_identifier, openid_link %><br />
    <%= f.text_field :openid_identifier %>
  </p>
  <p>
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </p>
  <p>
    <%= f.submit t('user_sessions.actions.login') %>
  </p>
</div>
<% end %>

</fieldset>