<%- title -%>

<table>
  <tr>
    <th><%= at(User, :login) %></th>
    <th><%= at(User, :login_count) %></th>
    <th><%= at(User, :last_request_at) %></th>
    <th><%= at(User, :last_login_at) %></th>
    <th><%= at(User, :last_login_ip) %></th>
    <th><%= at(User, :current_login_at) %></th>
    <th><%= at(User, :current_login_ip) %></th>
  </tr>
<%- for user in @users -%>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.login_count %></td>
    <td><%=h user.last_request_at %></td>
    <td><%=h user.last_login_at %></td>
    <td><%=h user.last_login_ip %></td>
    <td><%=h user.current_login_at %></td>
    <td><%=h user.current_login_ip %></td>
    <td><%= link_to t('common.actions.show'), user %></td>
    <td><%= link_to t('common.actions.edit'), edit_user_path(user) %></td>
    <td><%= link_to t('common.actions.destroy'), user, :confirm => t('common.confirms.destroy'), :method => :delete %></td>
  </tr>
<%- end -%>
</table>

